<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_bookmarked_fab">

    <target android:name="bookmark">

        <aapt:attr name="android:animation">

            <objectAnimator
                android:propertyName="fillColor"
                android:valueFrom="@color/lightish_blue"
                android:valueTo="@android:color/white"
                android:duration="300"
                android:interpolator="@android:interpolator/fast_out_linear_in"
                android:valueType="colorType" />

        </aapt:attr>

    </target>

    <target android:name="check">

        <aapt:attr name="android:animation">

            <objectAnimator
                android:propertyName="rotation"
                android:valueFrom="0"
                android:valueTo="180"
                android:duration="300"
                android:interpolator="@android:interpolator/fast_out_slow_in" />

        </aapt:attr>

    </target>

    <target android:name="line1">

        <aapt:attr name="android:animation">

            <objectAnimator
                android:propertyName="pathData"
                android:valueFrom="M10,16L7,13"
                android:valueTo="M7,11L17,11"
                android:duration="260"
                android:interpolator="@android:interpolator/fast_out_linear_in"
                android:valueType="pathType" />

        </aapt:attr>

    </target>

    <target android:name="line1">

        <aapt:attr name="android:animation">

            <objectAnimator
                android:propertyName="strokeColor"
                android:valueFrom="@android:color/white"
                android:valueTo="@color/lightish_blue"
                android:duration="120"
                android:interpolator="@android:interpolator/linear"
                android:valueType="colorType" />

        </aapt:attr>

    </target>

    <target android:name="line2">

        <aapt:attr name="android:animation">

            <objectAnimator
                android:propertyName="pathData"
                android:valueFrom="M10.483,15.517L18,8"
                android:valueTo="M12,6L12,16"
                android:duration="260"
                android:interpolator="@android:interpolator/fast_out_linear_in"
                android:valueType="pathType" />

        </aapt:attr>

    </target>

    <target android:name="line2">

        <aapt:attr name="android:animation">

            <objectAnimator
                android:propertyName="strokeColor"
                android:valueFrom="@android:color/white"
                android:valueTo="@color/lightish_blue"
                android:duration="120"
                android:interpolator="@android:interpolator/linear"
                android:valueType="colorType" />

        </aapt:attr>

    </target>

</animated-vector>